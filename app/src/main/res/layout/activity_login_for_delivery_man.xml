<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForDeliveryMan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center_horizontal"
                        android:textSize="22dp"
                        android:text="Delivery Man Info Update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                    <EditText

                        android:layout_marginTop="10dp"
                        android:id="@+id/emailForRegId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:hint="E m a i l"
                        android:inputType="textEmailAddress" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Password"
                        android:textColor="#555555"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/passForReg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="20dp"
                        android:hint="P a s s w o r d"
                        android:inputType="textPassword" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="User Name"
                        android:textColor="#555555"
                        android:textSize="16dp" />

                    <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/deliveryManUserNameId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#555555" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Contact"
                        android:textColor="#555555"
                        android:textSize="16dp" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/deliveryManPhoneNumberId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#555555" />

                    <TextView
                        android:textColor="#555555"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="District"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:gravity="start"
                        android:id="@+id/deliveryManDistrict"
                        android:textColor="#555555"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <TextView
                        android:textColor="#555555"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="Area / Thana"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:id="@+id/deliveryManAriaThanaId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#555555" />

                    <TextView
                        android:textColor="#555555"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:text="N Id"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="number"
                        android:id="@+id/deliveryManNid"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#555555" />




                    <Button
                        android:id="@+id/clickForSingUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/btn_background_pink_no_curb"
                        android:onClick="singupButton"
                        android:text="Sing Up"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>