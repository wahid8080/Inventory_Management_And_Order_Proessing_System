<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/offerId"
                        android:text="Offer : 30%"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="20dp"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_background_pink_no_curb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_margin="5dp"
                        android:id="@+id/productImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name : wheel powder"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Price : "
                            android:textSize="18dp" />

                        <TextView
                            android:gravity="center_vertical"

                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="24"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:id="@+id/quentityId"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:gravity="center_vertical"
                                android:id="@+id/decreaseQuantity"
                                android:background="#00FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_remove_circle_outline_black" />


                            <TextView
                                android:textSize="20dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/quantity"
                                android:layout_marginRight="15dp"
                                android:layout_marginLeft="15dp"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageButton
                                android:background="#00FFFFFF"
                                android:gravity="center_vertical"
                                android:id="@+id/increaseQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_control_point_black" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/productDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details : This is a good product  program generally is a computer
                    program that outputs or displays the message"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/removeProduct"
                        android:visibility="gone"
                        android:paddingRight="100dp"
                        android:paddingLeft="100dp"
                        android:drawableLeft="@drawable/ic_delete"
                        android:background="@drawable/btn_background_pink_no_curb"
                        android:textColor="@color/colorWhite"
                        android:text="Remove Product"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>