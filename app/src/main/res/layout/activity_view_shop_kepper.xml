<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewShopKepper">
    <androidx.appcompat.widget.SearchView
        android:background="@drawable/btn_background_curb_non_solid"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/googleMap"
        android:id="@+id/shopKeeperSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/shopKeeperSearch"
        android:id="@+id/recyclerViewForShopKeeper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/googleMap"
        android:drawableLeft="@drawable/ic_google"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:drawablePadding="10dp"
        android:onClick="shopMap"
        android:layout_margin="5dp"
        android:background="@drawable/btn_background_curb"
        android:textAllCaps="false"
        android:text="Map"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="45dp"/>

</RelativeLayout>